<Window x:Class="InvoiceCreatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoiceCreatorWPF"
        mc:Ignorable="d"
        Title="Invoice Creator" Height="450" Width="800">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock
                Text="Invoice Creator" FontSize="30"
                Margin="0 0 0 10" />
            <TextBlock
                Text="Create invoices by loading data from text files."
                FontSize="16" TextWrapping="Wrap" Margin="0 0 0 25"
            />
            <Button
                x:Name="btnLoadInvoice" Content="Load invoice file" 
                Background="#ddd" BorderThickness="0" FontSize="14"
                Padding="5" Margin="0 0 0 15"
            />
            <Button
                x:Name="btnAddInvoiceLogo" Content="Add logo" 
                Background="#ddd" BorderThickness="0" FontSize="14"
                Padding="5" Margin="0 0 0 15"
            />
            <Button
                x:Name="btnPrintInvoice" Content="Print invoice" 
                Background="#ddd" BorderThickness="0" FontSize="14"
                Padding="5" IsEnabled="false"
            />
        </StackPanel>
    </Grid>
</Window>
